<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">


    <TextView
            android:text="LAMBORGINI"
            android:fontFamily="sans-serif"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/tv1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.436"/>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp" app:srcCompat="@mipmap/car_08" tools:layout_editor_absoluteY="129dp"
            android:id="@+id/imageView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.497" tools:ignore="MissingConstraints"/>
    <Button
            android:text="DECIDE!"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:background="@drawable/lengkung"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:id="@+id/btndecide" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
             android:textColor="@color/colorAccent"
            tools:ignore="MissingConstraints"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="add new car"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:id="@+id/edtaddcar" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            tools:ignore="MissingConstraints" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:singleLine="true" android:selectAllOnFocus="true"/>
    <Button
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:textSize="13dp"
            android:background="@drawable/lengkung"
            android:layout_height="wrap_content"
            android:id="@+id/btnaddcar" android:text="add car" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textColorLink="@color/colorAccent" tools:ignore="MissingConstraints"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"

            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btndecide" app:layout_constraintVertical_bias="0.665"/>
</android.support.constraint.ConstraintLayout>